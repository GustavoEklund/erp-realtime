{
	"parser": "babel-eslint",
    "env": {
		"browser": true,
		"node": true,
        "es6": true
    },
    "extends": ["airbnb"],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": [
		"react",
		"jsx-a11y",
		"import"
    ],
    "rules": {
		"react/jsx-filename-extension": [
			"error",
			{ "extension": [".js", ".jsx"] }
		],
		"global-require": "off",
		"import/prefer-default-export": "off",
		"no-unused-expressions": ["error", { "allowTaggedTemplates": true }],
		"react/jsx-indent": "off",
		"react/jsx-indent-props": [2, "tab"],
		"semi": "off",
		"indent": [2, "tab"],
		"no-tabs": 0
    }
}
